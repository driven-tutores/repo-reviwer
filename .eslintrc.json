{
    "env": {
        "browser": true,
        "es2021": true
        
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": 0,
        "indent": ["error", 4],
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages"
            }
        ],
        "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }]
    }
}
